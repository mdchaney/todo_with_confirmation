<h1>New todo with confirm</h1>

<div>
  <strong>Body:</strong>
  <%= @todo_with_confirm.body %>
</div>

<div>
  <strong>Finished:</strong>
  <%= @todo_with_confirm.finished? ? "Yes" : "No" %>
</div>

<%= form_with(model: @todo_with_confirm, url: redo_todo_with_confirms_path) do |form| %>
  <!-- There should be no errors -->

  <%= form.hidden_field :body %>
  <%= form.hidden_field :finished %>

  <div>
    <%= form.submit "Make Changes" %>
  </div>
<% end %>

<%= form_with(model: @todo_with_confirm) do |form| %>
  <!-- There should be no errors -->

  <%= form.hidden_field :body %>
  <%= form.hidden_field :finished %>

  <div>
    <%= form.submit "Really Save" %>
  </div>
<% end %>

